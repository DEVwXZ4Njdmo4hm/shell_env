function net_test() {
	if [[ $# -ne 1 ]];
	then
		echo "Arguments error: required 1, got $#."
		return -1
	fi

	if [[ ! -f /usr/bin/wget ]];
	then
		echo "wget does not exist, install it to /usr/bin."
		return -2
	fi

	case $1 in
		"external")
					/usr/bin/wget -q --spider google.com
					return $?
					;;

		"internal")
					/usr/bin/wget -q --spider baidu.com
					return $?
					;;

		"help"	  )
					echo "Usage: net_test [option]"
					echo "Options:"
					echo "	external: test the connection to the external network, like google.com."
					echo "	internal: test the connection to the internal network, like baidu.com."
					echo
					return -3
	esac

	echo "Unknown option: $1"
	echo "please run \"net_test help\" to get help."
	return -4
}
