#!/bin/sh
# but do not make it executable.

function addalias() {
	if [[ $UID -ne 1000 ]]
	then
		echo "The user does not have permission to operate."
		return 1
	fi

	${EDITOR} $HOME/.env/alias
	envup "alias"
	return $?
}

