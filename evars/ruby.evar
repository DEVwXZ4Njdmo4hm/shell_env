#!/bin/sh
# Created by zijian at 2022-04-01 13:20:48

source $HOME/.env/setting
source $HOME/.env/functions/pathremove.func
source $HOME/.env/functions/ev_op.func

RUBY_VERSION=3.0.0

if [[ ${USE_USERGEMHOME} -eq 1 ]];
then
	export GEM_HOME=$HOME/.local/share/gem/ruby/${RUBY_VERSION}

	if [[ $(is_in ${GEM_HOME}/bin PATH) -eq 1 ]];
	then
		export PATH=${GEM_HOME}/bin:$PATH
	fi
else
	pathremove ${GEM_HOME}/bin PATH
	export GEM_HOME=/usr/lib64/ruby/gems/${RUBY_VERSION}/gems
fi
