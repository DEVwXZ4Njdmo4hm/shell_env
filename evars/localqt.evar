#!/bin/sh
# Created by zijian at 2022-04-01 13:35:52

source $HOME/.env/setting
source $HOME/.env/functions/pathremove.func

LOCAL_QT_VER=6.2
LOCAL_QT_HOME=${HOME}/.local/lib/Qt-${LOCAL_QT_VER}

if [[ ${USE_LOCALQT} -eq 1 ]];
then
	export PATH=${LOCAL_QT_HOME}/bin:$PATH
	export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:${LOCAL_QT_HOME}/lib
else
	pathremove ${LOCAL_QT_HOME} PATH
	pathremove ${LOCAL_QT_HOME}/lib LD_LIBRARY_PATH
fi
